{% extends 'base.html.twig' %}
{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1>
                <i class="fas fa-store"></i>
                Recherche "{{ recherche }}" : {{ resultat|length }} Produit(s)
            </h1>
        </div>


    {% if resultat is defined %}
        <div class="card-body row">
        <!--{% for produit in resultat %} -->
            <div class="col-md-4">
                <div class="card clickable" onclick="location ='{{ path('panier_ajouter', {'idProduit': produit.id, 'quantite': 1}) }}'">
                    <h4 class="card-title">{{ produit.libelle }}</h4>
                    <img class="card-img-produit" src="{{ asset(produit.visuel) }}">
                    <p class="card-text"><i>{{ produit.texte }}</i></p>
                    <h2>
                        <span class="badge badge-primary">
                            <i class="fas fa-cart-plus">
                                {{ produit.prix }}
                            </i>
                        </span>
                    </h2>
                </div>
            </div>
        <!--{% endfor %}-->
        </div>
    {% endif %}
    </div>
{% endblock %}