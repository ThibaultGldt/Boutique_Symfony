{% extends 'base.html.twig' %}
{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1><i class="fas fa-store"></i>Boutique : {{ categories|length }} rayons</h1>
        </div>

    {% if categories is defined%}
        <div class="card-body row">
            {% for item in categories %}
                <div class="col-md-3">
                    <div class="card clickable" onclick="location = '{{ path('rayon', {'idCategorie': item.id}) }}'">
                        <h4 class="card-title">{{ item.libelle }}</h4>
                        <img class="card-img-top" src="{{ asset(item.visuel) }}">
                        <p class="card-text">{{ item.texte }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    </div>
{% endblock %}