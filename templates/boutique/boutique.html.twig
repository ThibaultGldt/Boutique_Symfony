{% extends 'base.html.twig' %}
{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1><i class="fas fa-store"></i>Boutique : {{ categories|length }} rayons</h1>
        </div>
    </div>
{% if categories is defined%}
    <div class="row">
        {% for item in categories %}
            <div class="card">
                <h2 class="card-title">{{ item.libelle }}</h2>
                <img class="card-img-produit" src="{{ asset(item.visuel) }}">
                <a href="{{ path('rayon', {'idCategorie': item.id }) }}">{{ item.texte }}</a>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}